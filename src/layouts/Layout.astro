---
import "@fontsource-variable/onest";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
// Import alternativo para ViewTransitions
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
  description: string;
}

const { description, title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>

  <body class="relative text-black/90 dark:text-white/90 flex flex-col min-h-screen overscroll-none">
    <!-- Gradientes simplificados temporalmente -->
    <div
      class="fixed inset-0 z-[-2] h-full w-full bg-white dark:bg-neutral-950"
      style="background-image: radial-gradient(100% 50% at 50% 0%, rgba(217, 216, 255, 0.4) 0%, transparent 100%)"
      aria-hidden="true"
    ></div>
    
    <div
      class="fixed inset-0 z-[-1] h-full w-full"
      style="background-image: radial-gradient(80% 50% at 50% 120%, rgba(120, 119, 198, 0.05) 0%, transparent 70%)"
      aria-hidden="true"
    ></div>

    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />

    <style is:global>
      :root {
        color-scheme: light dark;
      }

      html {
        font-family: "Onest Variable", system-ui, sans-serif;
        scroll-behavior: smooth;
        -webkit-font-smoothing: antialiased;
      }

      @media (prefers-reduced-motion: reduce) {
        html {
          scroll-behavior: auto;
        }
      }

      #header-nav {
        animation: blur linear both;
        animation-timeline: scroll();
        animation-range: 0 500px;
      }

      @keyframes blur {
        to {
          backdrop-filter: blur(20px);
          border: 1px solid rgba(0, 0, 0, 0.1);
          padding: 0.25rem 0.75rem;
          background-color: rgb(229 229 229);
          border-radius: 9999px;
          box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
        }
      }

      @media (prefers-color-scheme: dark) {
        @keyframes blur {
          to {
            background: rgba(0, 0, 0, 0.3);
            border-color: rgba(255, 255, 255, 0.1);
          }
        }
      }
    </style>
  </body>
</html>